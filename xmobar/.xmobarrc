Config {
     font =         "xft:Sauce Code Pro:style=NerdFontComplete:bold:size=10:antialias=true"
   , bgColor =      "#1d262a"
   , fgColor =      "#ffffff"
   , position =     TopW L 100

   , sepChar =  "%"
   , alignSep = "}{"
   , template = " %UnsafeStdinReader% }{ %bpipe% > %dynnetwork% > %memory% > %vpipe% > %date% > %kbd%"

   , lowerOnStart =     False    -- send to bottom of window stack on start
   , hideOnStart =      False   -- start with window unmapped (hidden)
   , allDesktops =      True    -- show on all desktops
   , overrideRedirect = True    -- set the Override Redirect flag (Xlib)
   , pickBroadest =     False   -- choose widest display (multi-monitor)
   , persistent =       True    -- enable/disable hiding (True = disabled)
   , commands = [
          Run UnsafeStdinReader
        , Run DynNetwork     [ "--template" , "<tx>kB/s <rx>kB/s"
                             , "--Low"      , "1000"       -- units: kB/s
                             , "--High"     , "5000"       -- units: kB/s
                             , "--low"      , "#607D8B"
                             , "--normal"   , "#F8BBD0"
                             , "--high"     , "#C2185B"
                             ] 10

        , Run Memory         [ "--template" ,"<used>M"
                             , "--Low"      , "2048"        -- units: %
                             , "--High"     , "4096"        -- units: %
                             , "--low"      , "#607D8B"
                             , "--normal"   , "#F8BBD0"
                             , "--high"     , "#C2185B"
                             ] 10

        , Run Date           "%F %T" "date" 10

        , Run Kbd            [ ("cz(qwerty)" , "<fc=#607D8B>CZ</fc>")
                             , ("us"         , "<fc=#C2185B>EN</fc>")
                             ]
        , Run PipeReader "/tmp/.volume-pipe" "vpipe"
        , Run PipeReader "/tmp/.battery-pipe" "bpipe"
        ]
   }
